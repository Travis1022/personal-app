<!--图层样式-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape>
            <!--填充-->
            <solid android:color="@color/transparent"/>
            <!--描边-->
            <stroke
                android:width="1dp"
                android:color="@color/gray"/>
        </shape>
    </item>

</layer-list>