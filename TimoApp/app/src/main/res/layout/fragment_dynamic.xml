<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue">'

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_dynamic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabIndicatorColor="@color/color_yellow_fcf3cd"
            app:tabIndicatorHeight="4dp"
            app:tabMaxWidth="150dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/color_yellow_fcf3cd"
            app:tabTextAppearance="@style/dynamic_tab_style"
            app:tabTextColor="@color/lightWhite"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/add"/>

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_dynamic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
